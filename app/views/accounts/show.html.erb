<div class="row">
  <div class="col-2">
    <%= render partial: "components/account-list" %>
  </div>

  <div class="col-10">
    <% @account.tweets.each do |tweet| %>
      <div class="row">
        <div class="col-12">
          <div class="card bg-dark mb-2">
            <div class="card-body">
              <p class="card-text">
                <%= tweet.full_text %>
              </p>
              <small>
                <%= link_to tweet.tweeted_at, tweet.url, class:'info-link' %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
