<div class="row">
  <div class="col-2">
    <%= render partial: "components/account-list" %>
  </div>

  <div class="col-10">
    <% @account.tweets.each do |tweet| %>
      <div class="row">
        <div class="col-12">
          <div class="card bg-dark mb-2">
            <div class="card-body">
              <%= tweet.full_text %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
