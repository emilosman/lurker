<div class="row">
  <div class="col-2">
    <%= render partial: "components/account-list" %>
  </div>

  <div class="col-10">
    <% if @account %>
      <h3 class="mt-2">
        <%= link_to @account.name, @account %>

        <% unless action_name == 'show' %>
          <small>
            [<%= action_name %>]
          </small>
        <% end %>
      </h3>
      <ul class="list-inline">
        <li>
          <%= link_to @account do %>
            [all]
          <% end %>
        </li>
        <li>
          <%= link_to refresh_tweets_account_path(@account), method: 'post', remote: true do %>
            [refresh]
          <% end %>
        </li>
        <li>
          <%= link_to starred_account_path(@account)do %>
            [starred]
          <% end %>
        </li>
        <li>
          <%= link_to unread_account_path(@account)do %>
            [unread]
          <% end %>
        </li>
        <li>
          <%= link_to media_account_path(@account)do %>
            [media]
          <% end %>
        </li>
        <li>
          <%= link_to @account.url, target: '_blank' do %>
            [open]
          <% end %>
        </li>
        <li>
          <%= link_to "" do %>
            [mark all read]
          <% end %>
        </li>
        <li>
          <%= link_to "" do %>
            [archive]
          <% end %>
        </li>
      </ul>
    <% else %>
      <h3 class="mt-2">Starred tweets</h3>
    <% end %>

    <% @tweets.each do |tweet| %>
      <%= render partial: "components/tweet", locals:{tweet: tweet} %>
    <% end %>

    <div class="row">
      <div class="col-12 text-center">
        <%= paginate @tweets %>
      </div>
    </div>

    <% unless @tweets.present? %>
      <p>
        No Tweets.
      </p>
    <% end %>
  </div>
</div>
