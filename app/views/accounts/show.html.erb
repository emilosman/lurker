<div class="row">
  <div class="col-2">
    <%= render partial: "components/account-list" %>
  </div>

  <div class="col-10">
    <% if @account %>
      <h3 class="mt-2">
        <%= link_to @account.name, @account %>

        <% unless action_name == 'show' %>
          <small>
            [<%= action_name %>]
          </small>
        <% end %>
      </h3>
      <ul class="list-inline">
        <li>
          <%= link_to '[all]', @account %>
        </li>
        <li>
          <%= link_to '[refresh]', refresh_tweets_account_path(@account), method: 'post', remote: true %>
        </li>
        <li>
          <%= link_to '[starred]', starred_account_path(@account) %>
        </li>
        <li>
          <%= link_to '[unread]', unread_account_path(@account) %>
        </li>
        <li>
          <%= link_to '[media]', media_account_path(@account) %>
        </li>
        <li>
          <%= link_to '[open]', @account.url, target: '_blank' %>
        </li>
        <li>
          <%= link_to "" do %>
            [mark all read]
          <% end %>
        </li>
        <li>
          <%= link_to '[archive]', archive_account_path(@account), method: 'delete', remote: true %>
        </li>
      </ul>
    <% else %>
      <h3 class="mt-2">Starred tweets</h3>
    <% end %>

    <% @tweets.each do |tweet| %>
      <%= render partial: "components/tweet", locals:{tweet: tweet} %>
    <% end %>

    <div class="row">
      <div class="col-12 text-center">
        <%= paginate @tweets %>
      </div>
    </div>

    <% unless @tweets.present? %>
      <p>
        No Tweets.
      </p>
    <% end %>
  </div>
</div>
