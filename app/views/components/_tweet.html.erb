<div class="row">
  <div class="col-12">
    <div class="card bg-dark mb-2 <%= 'border border-primary' if tweet.unread %>">
      <div class="card-body">
        <small class="d-block mb-2">
          <%= link_to tweet.tweeted_at, tweet.url, class:'info-link' %>
        </small>

        <p class="card-text mb-3">
          <%= tweet.full_text %>
        </p>

        <% if tweet.media.present? %>
          <div class="row">
            <% tweet.media.each do |url| %>
              <div class="mb-2 col-sm-3 col-xs-6">
                <%= link_to url, target:"_blank" do %>
                  <%= image_tag url, class:"tweet__image" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="row">
          <div class="col">
            <ul class="list-inline mb-0">
              <li>
                <%= link_to tweet.url, target:'_blank' do %>
                  [open]
                <% end %>
              </li>
              <li>
                <%= link_to star_tweet_path(tweet), method:'post', remote: true do %>
                  [<%= tweet.starred ? 'unstar' : 'star' %>]
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
